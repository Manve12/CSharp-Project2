@using WebApp.Models
@model LoginViewModel
@{
    ViewBag.Title = "Login";
}
<div class="login-register-wrapper">
    <div class="login-register-form-wrapper">
        <div>
            @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal login-register-form", role = "form" }))
            {
                <h2 class="login-register-heading uppercase">@ViewBag.Title</h2>

                @Html.AntiForgeryToken()
                @Html.ValidationSummary("", new { @class = "text-danger" })

                <div class="form-group">
                    @Html.LabelFor(m => m.Email, new { @class = "login-register-label" })
                    @Html.TextBoxFor(m => m.Email, new { @class = " login-register-edit-field" })

                    @Html.LabelFor(m => m.Password, new { @class = "login-register-label" })
                    @Html.PasswordFor(m => m.Password, new { @class = "login-register-edit-field" })

                    <div class="login-remember">
                        @Html.CheckBoxFor(m => m.RememberMe)
                        @Html.LabelFor(m => m.RememberMe)
                    </div>

                    @Html.ActionLink("Register as a new user", "Register")

                    <input type="submit" value="Log in" class="login-register-button btn" />
                </div>
            }
        </div>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}