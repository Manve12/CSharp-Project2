@model WebApp.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}

<div class="login-register-wrapper">
    <div class="login-register-form-wrapper">

        @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal login-register-form", role = "form" }))
        {
            <h2 class="login-register-heading uppercase">@ViewBag.Title</h2>
            @Html.AntiForgeryToken()
            @Html.ValidationSummary("", new { @class = "text-danger" })

            <div class="form-group">
                @Html.LabelFor(m => m.Email, new { @class = "login-register-label" })

                @Html.TextBoxFor(m => m.Email, new { @class = "login-register-edit-field" })

                @Html.LabelFor(m => m.Password, new { @class = "login-register-label control-label" })

                @Html.PasswordFor(m => m.Password, new { @class = "login-register-edit-field" })

                @Html.LabelFor(m => m.ConfirmPassword, new { @class = "login-register-label control-label" })

                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "login-register-edit-field" })

                <input type="submit" class="btn login-register-button" value="Register" />
            </div>
        }
    </div>
    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
</div>