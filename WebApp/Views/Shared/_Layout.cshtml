<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css" integrity="sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU" crossorigin="anonymous">
    <link rel="stylesheet" href="~/Content/Account/Register.css" type="text/css" />
    <link rel="stylesheet" href="~/Content/Account/Login.css" type="text/css" />
    <link rel="stylesheet" href="~/Content/Gallery.css" type="text/css" />
    <link rel="stylesheet" href="~/Content/Comment.css" type="text/css" />
    <link rel="stylesheet" href="~/Content/Settings.css" type="text/css" />
    <link rel="stylesheet" href="~/Content/Search.css" type="text/css" />
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
        <div class="container-fluid">
            <div class="navbar-header">
                @Html.ActionLink("Discover More", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                <button type='button' class='navbar-toggle' data-toggle='collapse' data-target='#myNavbar'>
                    <span class='icon-bar'></span>
                    <span class='icon-bar'></span>
                    <span class='icon-bar'></span>
                </button>
                <a class='navbar-brand' href='#'></a>
            </div>


            <div class="navbar-collapse collapse" id="myNavbar">
                <ul class="nav navbar-nav navbar-right">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>

    <div class="background-image"></div>
    <div class="container-fluid body-content">
        @RenderBody()

        @*<hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>*@
    </div>
    
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/Scripts/Search.js")
    @RenderSection("scripts", required: false)
    <script src="~/Scripts/Account.js"></script>
    
    <script src="~/Scripts/Gallery.js"></script>
      
</body>
</html>
